<link rel="stylesheet" href="/css/home.css">

<home>
    <div id="lside">
        Lol
    </div>
    <section id="feed-posts">
        <h1>Grapevine</h1>

        <% if (locals.user) { %>
        <form action="/posts/create" id="new-post-form" method="POST">
            <textarea name="content" cols="30" rows="3" placeholder="What's cooking?" required></textarea>
            <input type="submit" value="Post">
        </form>
        <% } %>

        <div id="posts-list-container">
            <ul>
                <% for (post of posts) { %>

                <%- include('_post') -%>

                <% } %>
            </ul>
        </div>
    </section>
    <div id="rside">
        Lol 2
    </div>
</home>